<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Telefono</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.email %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= link_to 'Detalles', proveedor %></td>
        <% if can? :edit, proveedor %>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if can? :create, @proveedor%> <%= link_to 'Nuevo Proveedor', new_proveedor_path %> <%end%>
