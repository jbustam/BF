<%= form_with(model: proveedor, local: true) do |form| %>
  <% if proveedor.errors.any? %>
    <div id="error_explanation">
      <h2>No se pudo crear el proveedor</h2>

      <ul>
      <% proveedor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :telefono %>
    <%= form.text_field :telefono %>
  </div>

  <div id="materialHeader">
     <h2>Materiales que vende</h2>
  </div>
  <br />
  <ul id="materialesProveedor">
  </ul>
  <%= submit_tag "Agregar material", :type =>  "button",
      :id => "addMaterial", :onclick => 'addMaterialsProveedorField()'%>
  <br />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
