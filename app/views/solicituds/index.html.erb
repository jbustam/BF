<p id="notice"><%= notice %></p>

<h1>Solicitudes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Servicio</th>
      <th>Creada por</th>
      <th>Estado</th>
      <th>Bodega</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds = Solicitud.accessible_by(current_ability)
    @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.nombre %></td>
        <td><%= solicitud.usuario.nombre %></td>
        <td><%= solicitud.estado %></td>
        <td> <%= solicitud.bodega.nombre %></td>
        <td><%= link_to 'Detalles', solicitud %></td>
        <td><% if can? :edit, solicitud %><%= link_to 'Editar', edit_solicitud_path(solicitud) %> <% end %></td>
        <td><%= link_to 'Eliminar', solicitud, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

