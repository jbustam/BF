<p id="notice"><%= notice %></p>

<h1>Bodegas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bodegas.each do |bodega| %>
      <tr>
        <td><%= bodega.nombre %></td>
        <td><%= bodega.ubicacion %></td>
        <td><%= link_to 'Detalles', bodega %></td>
        <td><%= link_to 'Editar', edit_bodega_path(bodega) %></td>
        <td><%= link_to 'Eliminar', bodega, method: :delete, data: { confirm: 'Â¿Seguro que desea eliminar esta bodega?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

