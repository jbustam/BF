<%= form_with(model: bodega, local: true) do |form| %>
  <% if bodega.errors.any? %>
    <div id="error_explanation">
      <h2>No se pudo crear la bodega</h2>

      <ul>
      <% bodega.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>


  <div class="field">
    <%= form.label :ubicacion %>
    <%= form.text_field :ubicacion %>
  </div>

    <div id="materialHeader">
       <h2>Materiales</h2>
    </div>
    <br />
    <ul id="materialesBodega">
    </ul>
    <%= submit_tag "Agregar material", :type =>  "button",
        :id => "addMaterial", :onclick => 'addMaterialsBodegaField()'%>
    <br />


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
